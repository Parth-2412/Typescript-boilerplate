{
  "name": "typescript-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for typescript projects",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile" : "tsc",
    "compile:watch" : "tsc --watch --preserveWatchOutput",
    "dev": "nodemon --watch './**/*.ts' --exec 'ts-node' src/index.ts",
    "build" : "npm run compile",
    "start" : "node ."
  },
  "author": "Parth Patil",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^14.14.37",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
